/**
 * Variables
 */
$root = "^[0]"

/**
 * Base elements
 */
html
    height: 100%
    overflow-x: hidden
    overflow-y: auto

body
    margin: 0
    min-height: 100%
    -webkit-text-size-adjust: 100%
    overflow-x: hidden
    overflow-y: auto
    display: flex
    position: relative

a
    color: inherit
    text-decoration: none

svg
    display: block
    fill: currentColor
    pointer-events: none

input, button, textarea, select
    display: block
    box-sizing: border-box
    font-family: inherit
    font-size: inherit
    box-shadow: none !important
    border-radius: 0
    -webkit-appearance: none
    outline: 0
    border: 0
    padding: 0
    margin: 0
    background-color: transparent

    &[disabled]
        pointer-events: none

textarea
    resize: none

button
    cursor: pointer

p,
figure,
blockquote,
h1, h2, h3, h4, h5, h6
    margin: 0