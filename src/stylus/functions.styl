placeholder(color)
    &::-webkit-input-placeholder
        color: color

    &::-moz-placeholder
       color: color
       opacity: 1

    &:-ms-input-placeholder
       color: color

webkitOverflowFix()
    -webkit-mask-image: -webkit-radial-gradient(white, black)

loading(color)
    background-image: repeating-linear-gradient(-45deg, transparent, transparent 20px, color 20px, color 40px)
    background-size: 56px 56px
    animation: loading 1s infinite linear

gradientText(start = #56B4F2, end = #2F80ED)
    background-image: linear-gradient(220deg, start 0%, end 100%)
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent

gameCard(title, icon)
    .game__title
        gradientText(title[0], title[1]);

    .game__cover
        svg
            add-property('width', icon.size);
            add-property(icon.position[0], 0);
            add-property(icon.position[1], 0);
            add-property('transform', icon.transform);
